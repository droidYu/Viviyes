<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 灰色阴影 -->
    <item>
        <shape>
            <solid android:color="@android:color/darker_gray" />
            <corners android:radius="50dp" />
        </shape>
    </item>
    <!-- 白色前景 -->
    <item
        android:bottom="1dp"
        android:left="0.5dp"
        android:right="1dp">
        <shape>
            <solid android:color="#FFFFFF" />
            <corners android:radius="50dp" />
        </shape>
    </item>
</layer-list>

